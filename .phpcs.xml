<?xml version="1.0"?>
<ruleset name="BeyondWords WordPress Plugin">
	<description>Coding standards for the BeyondWords WordPress plugin.</description>

	<!-- What to scan -->
	<file>.</file>
	<exclude-pattern>/vendor/</exclude-pattern>
	<exclude-pattern>/node_modules/</exclude-pattern>
	<exclude-pattern>/plugins/</exclude-pattern>

	<!-- How to scan -->
	<arg value="sp"/>
	<arg name="basepath" value="./"/>
	<arg name="colors"/>
	<arg name="extensions" value="php"/>
	<arg name="parallel" value="8"/>
	<ini name="error_reporting" value="E_ALL &#38; ~E_DEPRECATED"/>

	<!-- PHP version compatibility -->
	<config name="testVersion" value="5.6-"/>
	<rule ref="PHPCompatibilityWP"/>

	<!-- VIP security and performance rules for all code -->
	<config name="minimum_supported_wp_version" value="4.6"/>
	<rule ref="WordPressVIPMinimum"/>

	<!-- Full WordPress formatting for plugins only -->
	<rule ref="WordPress">
		<include-pattern>*/plugins/*</include-pattern>
	</rule>

	<!-- PSR-12 for main code (not plugins) -->
	<rule ref="PSR12">
		<exclude name="PSR1.Files.SideEffects.FoundWithSymbols"/>
		<exclude-pattern>*/plugins/*</exclude-pattern>
	</rule>

	<!-- Prefix config (main plugin only, not sub-plugins) -->
	<rule ref="WordPress.NamingConventions.PrefixAllGlobals">
		<properties>
			<property name="prefixes" type="array" value="speechkit"/>
		</properties>
		<exclude-pattern>*/plugins/*</exclude-pattern>
	</rule>
	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" type="array" value="speechkit"/>
		</properties>
	</rule>
	<rule ref="WordPress.WhiteSpace.ControlStructureSpacing">
		<properties>
			<property name="blank_line_check" value="true"/>
		</properties>
	</rule>
</ruleset>
